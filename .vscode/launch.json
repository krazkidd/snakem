{
  "configurations": [
    {
      "name": "snakem server (local)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "snakem.web.app:app",
        "--host",
        "127.0.0.1",
        "--port",
        "9000",
        "--log-level",
        "info"
      ],
      "jinja": false,
      "justMyCode": false
    },
    {
      "name": "snakem client (local)",
      "type": "python",
      "request": "launch",
      "module": "snakem.net.client",
      "justMyCode": true
    },
    {
      "name": "snakem server (docker)",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "python": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
          }
        ],
        "projectType": "general"
      }
    }
  ]
}
